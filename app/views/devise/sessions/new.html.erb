<div class="notification is-danger">
  Boozehound is still heavily under development. If you're interested in beta testing,
  contact support@boozehound.app for login access. Thanks!
</div>
<h2 class="title">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.label :email, class: 'label is-large' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-large' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :password, class: 'label is-large' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input is-large' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: 'checkbox' %>
      <%= f.label :remember_me, class: 'checkbox' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'button is-large is-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
