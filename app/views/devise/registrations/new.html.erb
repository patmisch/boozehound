<h2 class="title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class="control">
      <%= f.label :email, class: 'label is-large' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-large' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :username, class: 'label is-large' %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'input is-large' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :first_name, class: 'label is-large' %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: 'input is-large' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :last_name, class: 'label is-large' %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", class: 'input is-large' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :password, class: 'label is-large' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'input is-large' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :password_confirmation, class: 'label is-large' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-large' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'button is-large is-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
